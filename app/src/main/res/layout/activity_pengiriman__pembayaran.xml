<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_load_page"
    tools:context=".pengiriman_Pembayaran">

    <ImageView
        android:layout_marginVertical="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/title"
        android:layout_marginTop="10pt"/>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="750px"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_pembayaran"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            android:textColor="@color/cardview_light_background"
            android:layout_marginBottom="5pt"
            android:textSize="10pt"/>
        <RadioGroup
            android:id="@+id/radio_kirimBayar"
            android:layout_below="@id/label_pembayaran"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/button_Mandiri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Bank Mandiri"/>
                <ImageView
                    android:layout_marginVertical="3pt"
                    android:layout_marginLeft="5pt"
                    android:layout_toRightOf="@id/button_Mandiri"
                    android:layout_width="25pt"
                    android:layout_height="15pt"
                    android:src="@drawable/mandiri"/>

                <RadioButton
                    android:id="@+id/button_BCA"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank BCA"/>
                <ImageView
                    android:layout_marginVertical="3pt"
                    android:layout_marginLeft="5pt"
                    android:layout_toRightOf="@id/button_BCA"
                    android:layout_width="25pt"
                    android:layout_height="15pt"
                    android:src="@drawable/bca"/>



                <RadioButton
                    android:id="@+id/button_BNI"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank BNI"/>
                <ImageView
                    android:layout_marginVertical="3pt"
                    android:layout_marginLeft="5pt"
                    android:layout_toRightOf="@id/button_BNI"
                    android:layout_width="25pt"
                    android:layout_height="15pt"
                    android:src="@drawable/bni"/>

        </RadioGroup>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/button_kirimBayar"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/input_btn_2"/>
</LinearLayout>